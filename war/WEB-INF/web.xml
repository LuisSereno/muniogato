<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  
    
    <servlet>
        <servlet-name>menu</servlet-name>
        <servlet-class>com.controller.Menu</servlet-class>
    </servlet>
	<servlet-mapping>
        <servlet-name>menu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>habitaciones</servlet-name>
        <servlet-class>com.controller.ReservaHabitaciones</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>habitaciones</servlet-name>
        <url-pattern>/habitaciones</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>reserva</servlet-name>
        <servlet-class>com.controller.AccionReserva</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reserva</servlet-name>
        <url-pattern>/accionReservar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>registraUsuario</servlet-name>
        <servlet-class>com.controller.AccionUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registraUsuario</servlet-name>
        <url-pattern>/registraUsuarios</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>formularioContacto</servlet-name>
        <servlet-class>com.controller.FormularioContacto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>formularioContacto</servlet-name>
        <url-pattern>/formularioContacto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>paypal</servlet-name>
        <servlet-class>com.controller.PaypPalNuevo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>paypal</servlet-name>
        <url-pattern>/paypalButton</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>compraCorrectaPaypal</servlet-name>
        <servlet-class>com.controller.CompraPaypal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>compraCorrectaPaypal</servlet-name>
        <url-pattern>/compraCorrecta</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>cancelaCompraPaypal</servlet-name>
        <servlet-class>com.controller.CancelaPaypal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cancelaCompraPaypal</servlet-name>
        <url-pattern>/compraIncorrecta</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>pantallaAdministrador</servlet-name>
        <servlet-class>com.controller.Administrador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pantallaAdministrador</servlet-name>
        <url-pattern>/pantallaAdministrador</url-pattern>
    </servlet-mapping>
    
    
    
    <welcome-file-list>
        <welcome-file>jsp/PaginaBasica.jsp</welcome-file>
    </welcome-file-list>
    
</web-app>